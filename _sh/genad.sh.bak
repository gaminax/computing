#!/bin/bash
# genad.sh d b rfe1
# generate asciidoc output in
#     d/b/r
#
# find . -name '*.ad' | while read dfe; do ./computing/genad.sh docs "$dfe"; done

d1="$1"
b="$2"
rfe1="$3"
argN=$#
if [ $argN -ne 3 ] ; then echo need 3 args; exit 1; fi
e1="${rfe1##*.}"
r="${rfe1%/*}"
# echo r="$r", rfe1="$rfe1"
if [ "$r" = "${rfe1}" ] ; then
    r=""
fi
rf="${rfe1%.*}"
e2="md"
rfe2=$rf.$e2
# echo e1=$e1, e2=$e2

drfe1=$d1/$rfe1
drf=$d1/$rf
if [ ! -f $drfe1 ] ; then echo no input file "$drfe1"; exit 1; fi 
dbrfe2=$d1/$b/$rfe2
# echo drfe1=$drfe1, dbrfe2=$dbrfe2,d1/b/r=$d1/$b/$r 
mkdir -p "$d1/$b/$r"
if [ $? -gt 0 ] ; then
    echo cannot mkdir $d1/$b/$r 1>&2; exit 1
fi


# stack the path for use in headers
pp=(home computing)
npp=2
parents="../"
q="$rfe1"
p="${q%%/*}"
while [ "$p" != "$q" ]; do
    #echo p="$p", q="$q", push p="$p"
    pp+=("$p")
    q="${q#*/}"
    p="${q%%/*}"
    parents+="../"
    ((npp++))
done

yyyy=`date +%Y`; mm=`date +%m`; dd=`date +%d`

# IFS="\n\r"
{ echo "---"
  echo "layout: default"
  echo "date: $yyyy-$mm-$dd"
  echo "---"
} >$dbrfe2

IFS="\n"
cat "$drfe1" | {
read h
printf "%s\n" "$h"
while read line; do
    if [ "${line:0:1}" != ":" ] ; then break; fi
    printf "%s\n" "$line"
done

# having problems getting the value out directly, use index instead.
printf "\n"
n=${#pp[@]};
# echo npp=$npp, n=$n, pp="${pp[*]}" 1>&2
if [ "fe1" = "index.ad" ]; then ((--n)); fi
i=0
while [ $i -lt $n ] ; do
    p="${pp[$i]}"
    # echo i=$i, p="$p" 1>&2
    P=`echo ${p:0:1}| tr "[:lower:]" "[:upper:]"`
    ath=${p:1}
    Path="$P$ath"
    printf "[small]#link:${parents}index.html[$Path/]#\n"
    parents=${parents#*/}
    ((i++))
done

printf "%s\n" "$line"
while read line; do
    printf "%s\n" "$line"
done
} | (cd $d1; asciidoc -s -) >>"$dbrfe2"
# | tee "${drf}_gen.$e1"
# echo dbrfe2="$dbrfe2"
